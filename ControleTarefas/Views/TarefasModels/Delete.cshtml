@model ControleTarefas.Models.TarefasModel

@{
    ViewData["Title"] = "Deletar tarefas";
}

<h3>Tem certeza que deseja excluir esta tarefa?</h3>
<div>
    <hr />
    <h4>Tarefa</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tarefa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tarefa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a asp-action="Index" type="button" class="btn btn-secondary">Voltar</a>
    </form>
</div>
