@model ControleTarefas.Models.TarefasModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="d-flex justify-content-center">Comece a criar sua tarefa</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label h3 mb-auto mt-4">Título</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarefa" class="control-label form-label h5 mb-auto mt-4">Tarefa</label>
                <textarea asp-for="Tarefa" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                <span asp-validation-for="Tarefa" class="text-danger"></span>
            </div>
            <div class="p-3 text-center form-group">
                <input type="submit" value="Criar" class="btn btn-primary w-25" />
                <a class="btn btn-secondary mx-2 w-25" onclick="limparCaixa()">Limpar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function limparCaixa() {
        // Seleciona a caixa de texto pelo ID
        var caixaDeTexto = document.getElementById('exampleFormControlTextarea1');

        // Define o conteúdo da caixa de texto como vazio
        caixaDeTexto.value = '';
    }
</script>