@model ControleTarefas.Models.TarefasModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="d-flex justify-content-center">Comece a criar sua tarefa</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label display-6">Título</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarefa" class="control-label form-label h5 mb-auto mt-4">Tarefa</label>
                <textarea asp-for="Tarefa" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                <span asp-validation-for="Tarefa" class="text-danger"></span>
            </div>
            <div>
            <div class="row p-2 form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="row p-2">
                <a asp-action="Create" type="submit" value="Create" class="btn btn-primary">Criar</a>
                <a asp-action="Index" class="btn btn-secondary mx-2">Limpar</a>
                <a asp-action="Index" class="btn btn-info mx-2">Back to List</a>
            </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
